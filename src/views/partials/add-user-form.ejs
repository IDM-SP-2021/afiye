<% let colorOptions = [ 'pink', 'magenta', 'red', 'orange', 'yellow', 'green',
'teal', 'light-blue', 'dark-blue', 'purple', 'brown', 'gray', 'black' ] %>
<div class="container">
  <section class="image">
    <% if (title === 'Afiye - Making a Tree') { %>
    <h2 id="h2-ob1">Create a Profile</h2>
    <% } else if (title === 'Afiye - Add Family Member') { %>
    <h2 id="h2-ob1">Add a Family Member</h2>
    <% } %>
    <form
      id="profile-setup"
      action="<% if (title === 'Afiye - Making a Tree') { %>
        /account/welcome-make<% } else if (title === 'Afiye - Add Family Member') { %>/account/add-member<% } else if (title === 'Afiye - Edit Profile') { %>/account/edit-profile-<%- user.uid %><% } %>"
      method="post"
      enctype="multipart/form-data"
    >
      <button id="open-profile" class="<% if (title === 'Afiye - Edit Profile') { %> <%- data.profile.profileColor %> <% } %>"><% if (title === 'Afiye - Edit Profile') { %><img src="<%- data.profile.avatar %>"><% } %></button>
      <h2 id="full-name">
        <% if (title === 'Afiye - Making a Tree' || title === 'Afiye - Edit Profile') { %>
        <span><%- user.firstName %> <%- user.lastName %></span>
        <% } else if (title === 'Afiye - Add Family Member') { %>
        <span>Tracy Doe</span>
        <% } %>
      </h2>
      <% if (title === 'Afiye - Making a Tree' || title === 'Afiye - Edit Profile') { %>
      <p class="caption">This is how your name will appear to your family</p>
      <% } else if (title === 'Afiye - Add Family Member') { %>
      <p class="caption">This is how their name will appear to your family</p>
      <% } %> <% if (title === 'Afiye - Add Family Member' || title === 'Afiye - Edit Profile') { %>
      <div class="input-container">
        <input
          type="text"
          name="firstName"
          class="input"
          id="firstName"
          placeholder="First name"
          value="<% if (title === 'Afiye - Edit Profile') { %><%- data.profile.firstName %><% } %>"
          required
        />
      </div>
      <% } %>
      <div class="input-container">
        <input
          type="text"
          name="prefName"
          id="prefName"
          class="input"
          placeholder="Preferred first name (optional)"
          value="<% if (title === 'Afiye - Edit Profile') { %><%- data.profile.prefName %><% } %>"
        />
      </div>
      <% if (title === 'Afiye - Add Family Member' || title === 'Afiye - Edit Profile') { %>
      <div class="input-container">
        <input
          type="text"
          name="lastName"
          class="input"
          id="lastName"
          placeholder="lastName"
          value="<%- user.lastName %>"
          required
        />
      </div>
      <% } %>
      <div class="input-container">
        <label for="gender">Gender</label>
        <select name="gender" id="gender" required>
          <option value="F" <% if (title === 'Afiye - Edit Profile') { %><% if (data.profile.gender === 'F') { %> selected <% } %><% } %> >Female</option>
          <option value="M" <% if (title === 'Afiye - Edit Profile') { %><% if (data.profile.gender === 'M') { %> selected <% } %><% } %> >Male</option>
          <option value="N" <% if (title === 'Afiye - Edit Profile') { %><% if (data.profile.gender === 'N') { %> selected <% } %><% } %> >Non-Binary</option>
          <option value="NA" <% if (title === 'Afiye - Edit Profile') { %><% if (data.profile.gender === 'NA') { %> selected <% } %><% } %> >Prefer not to say</option>
        </select>
      </div>
      <% if (title === 'Afiye - Add Family Member') { %>
      <div class="input-container">
        <label for="relation">Relation</label>
        <select name="relation" id="relation" required>
          <option value="child">Child</option>
          <option value="parent">Parent</option>
          <option value="sibling">Sibling</option>
          <option value="spouse">Spouse</option>
        </select>
      </div>
      <div class="input-container">
        <label for="related">To</label>
        <select name="related" id="related" required>
          <% data.family.forEach(member => { %>
          <% if (member.prefName !== '') { %>
          <option value="<%- member.id %>">
            <%- member.prefName %> <%- member.lastName %>
          </option>
          <% } else { %>
          <option value="<%- member.id %>">
            <%- member.firstName %> <%- member.lastName %>
          </option>
          <% } %> <% }); %>
        </select>
      </div>
      <% } %>
      <div class="input-container">
        <input
          type="date"
          name="birthdate"
          class="input"
          id="birthdate"
          value="<% if (title === 'Afiye - Edit Profile') { %><%- data.profile.birthdate %><% } %>"
          required
        />
      </div>
      <div class="input-container">
        <input
          type="text"
          name="location"
          class="input"
          id="location"
          placeholder="Location (optional)"
          value="<% if (title === 'Afiye - Edit Profile') { %><%- data.profile.location %><% } %>"
        />
      </div>
      <fieldset id="profile-color-select">
        <legend>Select a profile color</legend>
        <% for (let i = 0; i < colorOptions.length; i++) { %>
        <div class="check-container">
          <input
            type="radio"
            name="profileColor"
            id="color-<%- colorOptions[i] %>"
            value="profileColor-<%- colorOptions[i] %>"
            <% if (title === 'Afiye - Edit Profile') { %><% if (data.profile.profileColor === `profileColor-${ colorOptions[i] }`) { %> checked <% } %><% } %>
          />
          <label for="color-<%- colorOptions[i] %>">
            <span><%- colorOptions[i] %></span>
          </label>
        </div>
        <% } %>
      </fieldset>
      <div id="profile-upload" class="modal hidden">
        <div class="modal-inner">
          <button class="button primary icon cross"></button>
          <div class="file-input upload">
            <input
              type="file"
              name="profile"
              id="profile"
              accept="image/jpeg image/png"
            />
            <label for="profile">Upload</label>
          </div>
          <p>Please upload a picture for your profile</p>
        </div>
      </div>
      <input
        class="button primary"
        type="submit"
        value="<% if (title === 'Afiye - Making a Tree' || title === 'Afiye - Edit Profile') { %>Save<% } else if (title === 'Afiye - Add Family Member') { %>Create<% } %>"
      />
    </form>
  </section>
</div>
