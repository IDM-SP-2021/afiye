<%- include('../../partials/user-header') %>
<div id="top" class="create-new-post">
  <!-- profile img -->
  <div class="imgname">
    <%- include('../../partials/avatar', {person: data.current}) %>

    <!-- username -->
    <div>
      <h2 style="margin: 0; font-weight: 400">
        <%- user.firstName %> <%- user.lastName %>
      </h2>
      <span style="font-size: 12px; font-weight: 400">That's you!</span>
    </div>
  </div>

  <!-- buttons -->
  <div id="add-post-control" class="buttons">
    <div class="button primary icon plus"></div>
    <div id="add-options" class="hidden">
      <a href="/account/add-post" id="add-post" class="add-option"
        >Create a New Memory</a
      >
      <a href="/account/add-album" id="add-post" class="add-option"
        >Create a New Album</a
      >
    </div>
  </div>
</div>

<div class="post-container">
  <% if (data.posts.length === 0) { %>
  <div id="no-posts" class="afiye-posts">
    <h2>
      Hmm... It doesn't look like you or your family have shared any memories
      yet.
    </h2>
    <a href="/account/add-post"
      >Create a memory and share it with your family!</a
    >
  </div>
  <% } else { %> <% data.posts.forEach(item => { %> <%-
  include('../../partials/feed-item', {item: item}) %> <% }) %>
  <div class="end">
    <img src="../../../assets/imgs/feed-end.png" />

    <p id="feed-bottom-message" style="text-align: center; margin-top: 20px">
      You've reached the end of your family's memories.
      <a href="#top">Back to the top!</a>
    </p>
  </div>
  <% } %>
</div>
<%- include('../../partials/user-mobile-nav') %>
