<div class="post-container">
  <% if (data.posts.length === 0) { %>
    <div id="no-posts" class="afiye-posts">
      <h2>Hmm... It doesn't look like you or your family have shared any memories yet.
      </h2>
      <a href="/account/add-post">Create a memory and share it with your family!</a>
    </div>
  <% } else { %>
    <% data.posts.forEach(item => { %>
    <%- include('../../partials/feed-item', {item: item}) %>
    <% }) %>
    <p>You've reached the end of your family's memories. <a href="#top">Back to the top!</a></p>
  <% } %>
</div>
