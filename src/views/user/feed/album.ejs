<%- include('../../partials/user-header') %>

<div class="album-container" style="padding-top: 4rem">
  <div class="afiye-posts">
    <div class="user-info">
      <!-- profile img -->
      <div class="imgname">
        <%- include('../../partials/avatar', {person: data.albumData.ownerData}) %>

        <!-- username -->
        <div>
          <h2>
            <% if (data.albumData.ownerData.prefName !== '') { %><%=
            data.albumData.ownerData.prefName %><% } else { %><%= data.albumData.ownerData.firstName
            %><% } %> <%= data.albumData.ownerData.lastName %>
          </h2>
          <span><%- data.albumData.ownerData.relation %></span>
        </div>
      </div>

      <!-- timestamp -->
      <div class="timestamp" style="float: right">
        <img
          style="padding-bottom: 10px"
          src="../assets/icons/more-01.svg"
          alt="more"
        />
        <span><%- data.albumData.timeStamp %></span>
      </div>
    </div>

    <div>
      <h2><%- data.albumData.album.title %></h2>
    </div>
    <div>
      <p><%- data.albumData.album.description %></p>
    </div>

<div class="post-container">
  <% data.postData.forEach(item => { %> <%- include('../../partials/feed-item',
  {item: item}) %> <% }) %>
</div>
<div id="tagged">
  <h3>Tagged Family</h3>

  <div id="tagged-members">
    <% if (data.tagged.length > 0) { %>
      <% data.tagged.forEach(member => { %>
        <a href="/account/profile-<%- member.uid %>">
          <%- include('../../partials/avatar', {person: member}) %>
          <p>
            <% if (member.prefName !== '') { %>
              <%- member.prefName %>
            <% } else { %>
              <%- member.firstName %>
            <% } %>
          </p>
        </a>
      <% }) %>
    <% } else { %>
      <p>No one is tagged in this memory.</p>
    <% } %>
  </div>
</div>
</div>
</div>
